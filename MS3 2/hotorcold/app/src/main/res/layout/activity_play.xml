<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="uva.cs4720.ms3.PlayActivity"
    android:id="@+id/playDisplay">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/ratioDisplay">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/distanceView"
            android:text="Ratio:" />
        </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:id="@+id/colorholder"
        android:layout_marginTop="63dp"
        android:layout_below="@+id/ratioDisplay"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/redtag"
            android:text="Red:" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/greentag"
            android:text="Green:"
            android:layout_below="@+id/redtag"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bluetag"
            android:text="Blue:"
            android:layout_below="@+id/greentag"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/RedNum"
            android:text="255"
            android:layout_toEndOf="@+id/greentag"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/greentag" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/GreenNum"
            android:text="0"
            android:layout_alignTop="@+id/greentag"
            android:layout_alignLeft="@+id/RedNum"
            android:layout_alignStart="@+id/RedNum"
            android:layout_marginLeft="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/BlueNum"
            android:text="255"
            android:layout_alignTop="@+id/bluetag"
            android:layout_alignLeft="@+id/GreenNum"
            android:layout_alignStart="@+id/GreenNum" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/status"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/statusView"
            android:text="You are"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hotorcold"
            android:text="at the start"
            android:layout_below="@+id/statusView"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</RelativeLayout>
